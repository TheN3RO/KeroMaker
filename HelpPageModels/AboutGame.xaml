<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeroMaker.HelpPageModels.AboutGame"
             Title="AboutGame">
    <Grid BackgroundColor="{StaticResource Gray600}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" BackgroundColor="{StaticResource Primary}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="left.png"
             WidthRequest="30"
             HeightRequest="30"
             Margin="10"
             HorizontalOptions="Start"
             Clicked="LeftButton_Cliked" />

            <Label Text="O grze" FontSize="Title" VerticalOptions="CenterAndExpand" Margin="0,10,10,10" Grid.Column="1" HorizontalOptions="CenterAndExpand"/>
        </Grid>
        <Grid Grid.Row="1" BackgroundColor="{StaticResource BlackNight}">
            <Label Margin="10" FontSize="Large" Text="Ta sekcja jest obecnie jeszcze w trakcie prac."></Label>
        </Grid>

    </Grid>
</ContentPage>