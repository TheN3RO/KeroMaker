<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeroMaker.HelpPage"
             Title="HelpPage">
    <Grid BackgroundColor="{StaticResource Gray600}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid BackgroundColor="{StaticResource Primary}">
            <ImageButton Source="left.png"
                 WidthRequest="30"
                 HeightRequest="30"
                 Margin="10"
                 HorizontalOptions="Start"
                 Clicked="LeftButton_Cliked" />

            <Label Text="Poradnik" FontSize="Title" VerticalOptions="CenterAndExpand" Margin="0,10,10,10" Grid.Column="1" HorizontalOptions="CenterAndExpand"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button CornerRadius="0"  Text="Gra" Margin="0" BackgroundColor="{StaticResource BlackNight}"
                Clicked="AboutGame_Clicked" />
        </Grid>
        <Grid Grid.Row="2">
            <Button CornerRadius="0"  Text="O nas" Margin="0,1,0,1" BackgroundColor="{StaticResource BlackNight}"
                Clicked="AboutUs_Clicked" />
        </Grid>
        <Grid Grid.Row="3" BackgroundColor="{StaticResource BlackNight}" />
    </Grid>
</ContentPage>